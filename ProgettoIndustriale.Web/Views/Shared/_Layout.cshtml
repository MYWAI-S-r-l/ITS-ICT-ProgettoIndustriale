@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <title>Ansaldo - Protocollo - @ViewData["Title"]</title>

    <base href="@Url.Content("~/")" />

    <!--Style-->
    <link rel="stylesheet" href="https://unpkg.com/@@progress/kendo-theme-default@4.43.0/dist/all.css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/lib/MaterialDesign-Webfont/css/materialdesignicons.min.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/Roboto.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/vuetify/vuetify.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!--Script-->
    <environment include="Development">
        <script src="~/lib/vue/vue.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/vue/vue.min.js" asp-append-version="true"></script>
    </environment>

    <script src="~/lib/vuetify/vuetify.js" asp-append-version="true"></script>
    <script src="~/lib/axios/axios.min.js" asp-append-version="true"></script>    
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/commonModule.js" asp-append-version="true"></script>

    <script>
        commonModule.appBaseUrl = "@Url.Content("~/")";
        commonModule.webApiBaseUrl = "@Configuration["BaseUrls:WebApiBaseUrl"]";
        commonModule.webBaseUrl = "@Configuration["BaseUrls:WebBaseUrl"]";
        console.log("commonModule: ", commonModule);
        console.log("commonModule.webApiBaseUrl: ", commonModule.webApiBaseUrl);
    </script>

    @await RenderSectionAsync("headScripts", false)

    <link rel="shortcut icon" type="image/x-icon" href="~/assets/favicon.ico" />
</head>

<body>

    <div id="myApp">
        <v-app>
            <left-menu currentPage="@ViewData["Title"]"></left-menu>
            <v-main>
                @RenderBody()
            </v-main>
        </v-app>
    </div>

    @* <footer class="border-top footer text-muted"> *@
    @*     <div> *@
    @*         &copy; 2022 - Ansaldo Protocollo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
    @*     </div> *@
    @* </footer> *@

    @await RenderSectionAsync("bodyScripts", false)

</body>

</html>